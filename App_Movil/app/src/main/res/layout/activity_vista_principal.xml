<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vista_Principal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:gravity="center"
        android:text="Nombre del Hotel"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInformacion"
            android:layout_width="305dp"
            android:layout_height="135dp"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:insetTop="80dp"
            android:text="Informacion de la habitación" />

        <Button
            android:id="@+id/btnDatosPersonales"
            android:layout_width="305dp"
            android:layout_height="80dp"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:insetTop="30dp"
            android:text="Datos Personales" />

        <Button
            android:id="@+id/button3"
            android:layout_width="305dp"
            android:layout_height="80dp"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:insetTop="30dp"
            android:text="Servicio a Habitación" />

        <Button
            android:id="@+id/button4"
            android:layout_width="305dp"
            android:layout_height="80dp"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:insetTop="30dp"
            android:text="Temperatura de la Habitación" />

        <Button
            android:id="@+id/btnSalirPrincipal"
            android:layout_width="306dp"
            android:layout_height="80dp"
            android:backgroundTint="#F44336"
            android:insetTop="30dp"
            android:text="Salir" />
    </LinearLayout>

</LinearLayout>